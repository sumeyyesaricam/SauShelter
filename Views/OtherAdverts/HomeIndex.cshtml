@model IEnumerable<SauShelter.Models.OtherAdvert>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3" id="sidebar">
            @using (Html.BeginForm())
            {
                <ul class="nav nav-list bs-docs-sidenav nav-collapse collapse">
                    <li class="active">
                        <a href="index.html"><i class="icon-chevron-right"></i> Fiyat Aralığı</a><br />
                        @Html.TextBox("EnDusuk", "En Düşük")
                        @Html.TextBox("EnYuksek", "En Yüksek")
                    </li>
                </ul>
                <button class="btn btn-danger btn-large">Araştır</button>
            }
        </div>
        <div class="span9" id="content">
            <div class="row-fluid">
                  <div class="block">
                    @using (Html.BeginForm())
                    {
                        <div class="navbar navbar-inner block-header">
                            <div class="muted pull-left">İlanlar</div>
                            <div class="pull-right">
                                <span class="badge badge-info">
                                    <i class="icon-search"></i>
                                    @Html.TextBox("AdvertName")
                                    <button>Ara</button>
                                </span>
                            </div>
                        </div>
                    }
                    <div class="block-content collapse in">
                        <div class="row-fluid padd-bottom">
                            @ViewBag.Mesaj
                            @foreach (var item in Model)
                            {<div class="span3">
                                <table class="table table-striped">
                                    <tr>
                                        <th>
                                            <a href='@Url.Action("Details", "OtherAdverts", new {id=item.ID })'>
                                                <img src="~/Images/@(item.ID).jpg" style="width: 500px; height: 200px;" />
                                            </a>
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>- @item.TITLE</td>
                                    </tr>
                                    <tr>
                                        <td>- @item.COST TL</td>
                                    </tr>
                                </table>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
